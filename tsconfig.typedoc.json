{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "baseUrl": ".",
    "paths": {
      "@algo-chip/core": ["packages/core/src/index.ts"],
      "@algo-chip/core/*": ["packages/core/src/*"],
      "@algo-chip/util": ["packages/util/src/index.ts"],
      "@algo-chip/util/*": ["packages/util/src/*"]
    }
  },
  "include": [
    "packages/core/src/**/*.ts",
    "packages/demo/src/**/*.ts",
    "packages/util/src/**/*.ts"
  ]
}
