{
  "name": "algo-chip",
  "version": "1.0.2",
  "description": "High-quality automatic BGM and sound effect composition engine with 4-channel chiptune synthesis",
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    },
    "./core": {
      "import": "./packages/core/dist/index.js",
      "types": "./packages/core/dist/index.d.ts"
    },
    "./util": {
      "import": "./packages/util/dist/index.js",
      "types": "./packages/util/dist/index.d.ts"
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "USAGE.md",
    "USAGE_ja.md",
    "packages/core/dist",
    "packages/core/worklets",
    "packages/util/dist"
  ],
  "type": "module",
  "author": "abagames",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abagames/algo-chip.git"
  },
  "homepage": "https://github.com/abagames/algo-chip#readme",
  "bugs": {
    "url": "https://github.com/abagames/algo-chip/issues"
  },
  "keywords": [
    "chiptune",
    "music-generation",
    "procedural-music",
    "bgm",
    "sound-effects",
    "web-audio",
    "retro",
    "8bit"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -ws --if-present",
    "build:core": "npm run build -w packages/core",
    "build:util": "npm run build -w packages/util",
    "build:demo": "npm run build -w packages/demo",
    "build:pages": "npm run build:core && npm run build:util && npm run build:demo && npm run copy:artifacts",
    "copy:artifacts": "rm -rf docs/assets docs/worklets docs/motifs && mkdir -p docs/lib && cp packages/core/dist/algo-chip.umd.js* docs/lib/ && cp packages/util/dist/algo-chip-util.umd.js* docs/lib/ && cp -r packages/demo/dist/* docs/",
    "test": "npm run test:core && npm run test:util",
    "test:core": "node --loader ts-node/esm --test \"packages/core/src/test/**/*.spec.ts\"",
    "test:util": "npm run test -w packages/util",
    "dev": "npm run dev -w packages/demo",
    "preview": "npm run preview -w packages/demo",
    "docs:api": "typedoc --options typedoc.json",
    "prepare": "npm run build:core && npm run build:util"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "typedoc": "^0.25.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.3.4"
  }
}
